<component name="salesforcedesk-cases" type="synapse/template">
    <subComponents>
        <component name="searchCases">
            <file>searchCases.xml</file>
            <description>Search for cases based on a combination of parameters with pagination.
            </description>
        </component>
        <component name="createCase">
            <file>createCase.xml</file>
            <description>Create a case.</description>
        </component>
        <component name="forwardCase">
            <file>forwardCase.xml</file>
            <description>Forward a case and all attachments to 1 or more email addresses.
            </description>
        </component>
        <component name="listReplies">
            <file>listReplies.xml</file>
            <description>Retrieve a paginated list of all replies for this case.</description>
        </component>
        <component name="createReply">
            <file>createReply.xml</file>
            <description>Create a reply for the given case.</description>
        </component>
        <component name="listNotes">
            <file>listNotes.xml</file>
            <description>Retrieve a paginated list of notes for a case.</description>
        </component>
        <component name="showNote">
            <file>showNote.xml</file>
            <description>Retrieve a private case note.</description>
        </component>
        <component name="createNote">
            <file>createNote.xml</file>
            <description>Create a private note for the given case.</description>
        </component>
        <component name="showCaseAttachment">
            <file>showCaseAttachment.xml</file>
            <description>Retrieve an attachment.</description>
        </component>
    </subComponents>
</component>